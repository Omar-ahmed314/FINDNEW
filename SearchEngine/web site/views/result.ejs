<html>
    <head>
        <meta charset="utf-8">
        <meta name="description" content="Search Engine for multiple purposes">
        <title>Find New</title>
        <link rel="icon" href="../img/icon.png">
        <link rel="stylesheet" href="../css/result.css">
    </head>
    <body>
        <div class="searchBox">
            <div class="logo">
                <form action="/" method="GET">
                    <input type="submit" value="Find new">
                </form>
            </div>
            <div class="container">
                <form method="GET" action="/result">
                    <div class="inputs">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                        </svg>
                        <input type="text" name= "searchArea" placeholder = "Search for word" autocomplete="off" required>
                        <input type="submit" name= "searchButton" value = "Search">
                    </div>
                </form>
                <div class="suggestion">
                </div>
            </div>
        </div>
        <div class="results">
            <h3>about <%= arr.length%> results</h3>
            <% for(var i = 0; i < arr.length; i++) { %>
            <div class="link">
                <h2><%= arr[i].word%></h2>
                <% for(var j = 0; j < arr[i].url.length; j++) {%>
                <a href="<%= arr[i].url[j].URL%>"><%= arr[i].url[j].URL%></a>
                <% } %>
            </div>
            <% } %>
        </div>
        <div class="footer">
            <span>&copy;copy rights</span>
        </div>
        <script src="../js/jQuery.js"></script>
        <script src="../js/bootstrap.min.js"></script>
        <script src="../js/Search Engine.js"></script>
    </body>
</html>